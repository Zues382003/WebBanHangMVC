@{
    ViewData["Title"] = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_LayoutWebBanHang.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>;
@foreach (var item in Model)
{
    @await Html.PartialAsync("PartialProduct", item)

}
<div class="product__pagination">

    @Html.PagedListPager(
            Model,
            page => Url.Action("SanPhamTheoLoai", new { page = page, maloai = ViewBag.maloai }),
            new PagedListRenderOptions
    {
        ActiveLiElementClass = "fa fa-long-arrow-right",
    }
            )
</div>
